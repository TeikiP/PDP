/* Function that calls all necessary sub functions needed to solve a grid. */
static void process_solve(char* input_file,
                          int flag_verbose,
                          char* output_path) {

  /* Read the input file */
  grid_t* grid = read_file(input_file);
  
  /* Attempts to solve the grid */
  if (grid != NULL && solve_grid(grid, flag_verbose) == 1 && check_grid(grid) == 1) {
    printf("The grid is valid.\n");

    /* Shows the number of cells solved by heuristics alone */
    if (flag_verbose)
      printf("Heuristics made : %d\n\n", grid->heuristics);

    /* Print the solved grid */
    print_grid(grid, output_path);
  }

  else if (grid != NULL)
    printf("The grid is invalid.\n");

  /* Clean up memory */
  free_grid(grid);
}

/* Function that calls all necessary sub functions needed to generate a grid. */
static void process_generate(size_t generation_size,
                             int flag_strict,
                             char* output_path,
                             int flag_input,
                             char* input_path) {
  // TODO
  (void)flag_strict;
  generate_grid(1);

  /* Generates a grid */
  grid_t* grid = generate_linear_grid(generation_size);
  /* grid_t* grid_generated = generate_grid(8); */

  /* Output generated grid to a file as an input format */
  if (flag_input)
    save_generated_grid(grid, input_path);

  /* Print the solved grid */
  else
    print_grid(grid, output_path);

  /* Clean up memory */
  free_grid(grid);
}

/* Main function.*/
int main(int argc, char** argv) {
  int option;
  int flag_generate = 0;
  int flag_help = 0;
  int flag_verbose = 0;
  int flag_strict = 0;
  int flag_input = 0;
  char* file_to_solve = argv[1];
  char* output_path = NULL;
  size_t generation_size = 0;
  char* input_path = NULL;

  while ((option = getopt(argc, argv, "o:g:hvsi:")) != -1)
    switch (option) {
      case 'o':
        output_path = optarg;
        break;

      case 'g':
        flag_generate = 1;
        generation_size = atol(optarg);
        break;

      case 'h':
        flag_help = 1;
        break;

      case 'v':
        flag_verbose = 1;
        break;

      case 's':
        flag_strict = 1;
        break;

      case 'i':
        flag_input = 1;
        input_path = optarg;
        break;

      case '?':
        fprintf(stderr, "Unknown option '-%c'.\n", option);
        return 1;
    }

  if (argc < 2) {
    fprintf(stderr, "Usage: \"%s -h\" for help\n", argv[0]);
    exit(EXIT_FAILURE);
  }

  if (flag_help)
    process_help();

  else if (flag_generate)
    process_generate(generation_size, flag_strict, output_path,
                     flag_input, input_path);

  else
    process_solve(file_to_solve, flag_verbose, output_path);

  return 0;
}
